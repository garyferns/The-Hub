<center><h1>Log In</h1>


<%= stylesheet_link_tag 'user_sessions_new' %>


  <%= form_tag user_sessions_path, :method => :post do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  <% end %>


<p>Signup instead <%= link_to 'here', new_user_path %>
</p>
</center>
